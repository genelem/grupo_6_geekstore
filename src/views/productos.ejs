<!DOCTYPE html>
<html lang="es">
<%- include("partials/head.ejs") %>
<body>
<%- include("partials/header.ejs") %>
<main>  
    <section class="search-bar">
        <div class="form" action="#" method="GET">
            <input type="search" name="busqueda" placeholder="Buscar productos, licencias y mÃ¡s">
            <button type="submit" aria-placeholder="fa fa-search"><i class="fa fa-search"></i></button>                
        </div>
    </section>    
    <br>
    <section class="productosRelacionados">
        <h3 class="subtitulo">Nuestros productos:</h3>
        <div class="productos">
            <% productos.forEach(function(producto){ %>
            <button id="producto"><a href="/productos/productDetail/<%= producto.id%>">
        <article class="product">
            <img src= "<%= producto.img%> ">
            <div class="articulo">
            <p class="precio">$ <%= producto.precio%></p>
            <p class="descuento"><%= producto.descuento%> %</p>
            <h4 class="descripciones"> <%= producto.descripcion%></h4>
            </div>
        </article>    
        <% }) %>  
        </div>
    </section>
    </main>
<%- include("partials/footer.ejs") %>
</body>
</html>



